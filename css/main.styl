highlighted-color = #DC143C

clearfix()
	zoom 1
	&:before
	&:after
		content ""
		display table
	&:after
		clear both
		
vertical-align()
	position relative
	top 50%
	transform translateY(-50%)

horizontal-align()
	position relative
	left 50%
	transform translateX(-50%)
		
*
*:before
*:after
	box-sizing border-box

body
	font 14px/1.5 "Open Sans", sans-serif;
	color rgba(0,0,0, .6)

ul
	margin 0
	padding-left 0
	list-style none

a
	font-size .9em
	text-decoration none
	color white
	transition .7s all ease
	text-transform capitalize

h1
	font-size 2.75em

h2
	font-size 2.15em
	line-height 1.4
	margin 1.5em 0 0 0
	
h3
	font-size 1.2em

h4
	font-size 1.5em
	
h5
	font-size 1.2em

h1
h2
h3
h4
h5
	text-align center
	
p
	font-size 1.2em

img
	max-width 100%
	
.container
	width 95%;
	max-width 1440px
	margin 0 auto

.btn
	display inline-block
	margin 1.5em auto
	padding 15px 25px
	border-radius 3px
	background highlighted-color
	color white

.big-text
	margin 1.8em 0 0 0 
	font-size 3.5em
	color white

.medium-text
	font-size 1em
	font-weight 100
	text-align center
	color white

/* Header */
#header 
	position relative
	height 100vh
	padding 0 2.5%
	text-align center
	background url("../img/banner.jpg")
	background-size cover
	
	.nav-fixed
		width 100%
		position fixed
		top 0
		left 0
		height 70px
		z-index 3
		background #292C47
		border none
		
		@media(min-width: 776px)
			padding 0 5%
	
	nav
		width 90%
		margin 0 auto
		display flex
		justify-content space-between
		align-items center
		height 90px
		padding 15px
		
		transition .3s all ease-out
		border-bottom 1px solid rgba(211,211,211, .3)
		
		@media(min-width: 776px)
			width 100%
			padding 5px
	
		
		.logo
			width 189px
			height 25px
			text-indent -9999px
			background url("../img/logo.png") no-repeat
		
		.mobile-nav
			width 50px
			height 50px
			text-align center
			background highlighted-color
			color white
			border-radius 50%
			
			@media(min-width: 776px)
				display none
			
			.fa
				font-size 1.5em
				vertical-align()
		
		ul
			display none
			
			@media(min-width: 776px)
				display flex
				
				li 
					margin 5px
					
					a
						text-transform uppercase
						
						&:hover
							color highlighted-color
				
		.navigation
			display flex
			flex-direction column
			justify-content center
			text-align center
			position absolute
			top 0 
			left 0
			width 100%
			height 100vh
			background rgba(0,0,0, .9)
			
			li 
				margin 10px

				a 
					font-size 1.5em
					text-transform uppercase
					color white
					
					&:hover
						color highlighted-color
	
	.heading
		max-width 500px
		position absolute
		top 50%
		transform translate(0, -50%)
		
		@media(min-width: 776px)
			left 50%
			transform translate(-50%, -50%)

	h2
		color white
	
	p
		font-weight 100
		line-height 1.2
		text-align center
		color white

/* Features Section */
#features 
	padding 75px 0
	
	@media(min-width: 776px)
		clearfix()
	
	.feature 
		margin 0 0 2.2em 0
		text-align center
		
		@media(min-width: 776px)
			width 47.5%
			margin 0 1.25%
			float left
		
		.fa
			color highlighted-color
		
		h3
		p
			margin 0 0 .25em
		
		h3
			margin-top .5em

/* Works Section */
#works 
	@media(min-width: 776px)
		clearfix()
		
.work
	position relative
	margin 0
	height 350px
	overflow hidden
	
	@media(min-width: 776px)
		width 50%
		float left
	
	img
		min-height 350px
		transition .7s all ease-in
	
	.overlay
		opacity 0
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		overflow hidden
		background rgba(220,20,60, .6)
		transition .7s all ease-in

	.overlay-caption
		vertical-align()
		
		h4
			font-size 
		
		h4
		h5
			color white
			margin 0
			font-weight 100
		
	&:hover .overlay
		opacity 1
	
	&:hover img
		transform scale(1.4)

/* Team Section */
#our-team
	padding 75px 0
	
	@media(min-width: 776px)
		clearfix()
	
	.member
		text-align center
		
		@media(min-width: 776px)
			width 47.5%
			margin 0 1.25%
			float left
		
		h3
			margin 0
			color highlighted-color
		
		.social-links
			display flex
			justify-content center
			margin-bottom 2em
			
			li
				margin 0 5px
				
				a
					width 40px
					height 40px
					padding-top 5px
					font-size 2em
					border 1px solid rgba(0,0,0, .2)
					color rgba(0,0,0, .2)
					transition .3s all ease-in
					
					&:hover
						border 1px solid highlighted-color
						background highlighted-color
						color white

/* Tesimonials Section */
#testimonials
	height 325px
	padding-bottom 25px
	background #53354A
	color white
	
	.banner
		width 100%
		position relative
		overflow hidden
		
		ul li
			float left
			
			.caption 
				text-align center

#download
	padding 75px 0
	text-align center
	
	h3
		margin 0
		font-size 2em
		font-weight 100
	
	span 
		font-size 1.5em
		font-weight 300
		color #2D3033
	
	.btn
		margin-top 3.5em

/* Footer */
footer 
	padding 45px 0 0 0
	text-align center
	background #3A3E64
	color white
	
	h3
		text-transform uppercase
	
	p
	address
		color rgba(255,255,255, .5)

	.location
	.social
	.about 
		margin-bottom 3.5em
	
	.social-links
		display flex
		justify-content center
		
		li
			margin 0 5px
			
			.fa
				width 40px
				height 40px
				border 2px solid white
				padding 5px
				font-size 2em
				color white
				transition .7s all ease-out
				
				&:hover
					border 2px solid highlighted-color
					background highlighted-color
		
	.copyright
		width 100%
		margin 0
		background #313454
		
		p 
			margin 0
			padding 15px 0
			font-size 1em
			
			span
				color white
			
			.fa
				color highlighted-color	


		